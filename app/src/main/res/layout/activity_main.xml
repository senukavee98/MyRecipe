<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/rp_background"
        android:layout_width="475dp"
        android:layout_height="739dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/edited_main" />

    <Button
        android:id="@+id/reg_product_button"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="376dp"
        android:onClick="registerProduct"
        android:text="Register Product"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.Button"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/display_product_button"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="376dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="displayProduct"
        android:text="Display Product"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.Button"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/availability_button"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:onClick="availability"
        android:text="Availability"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.Button"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_product_button" />

    <Button
        android:id="@+id/edit_product_button"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="editProduct"
        android:text="Edit Product"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.Button"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_product_button" />

    <Button
        android:id="@+id/search_button"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:onClick="search"
        android:text="Search"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/availability_button" />

    <Button
        android:id="@+id/recipes_button"
        style="@android:style/Widget.Holo.Light.Button.Toggle"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="recipes"
        android:text="Recipes"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_product_button" />

    <TextView
        android:id="@+id/rp_heading"
        android:layout_width="383dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:text="It's Cooking Time"
        android:textAllCaps="false"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:fontFamily="@font/amarante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>